---
import Page from "@layouts/uona.astro";
import Header from "@components/Header/index.astro";
import Footer from "@components/Footer/index.astro";

import Forms from "@components/Forms/index.astro";

import Gallery from "@components/Gallery/index.astro";
import Tools from "@components/Tools/index.astro";
// import Aside from "@components/Aside";
// import List from "@components/List";
import Text from "@components/Text";
// import Btn from "@components/Button";
// import Accordion from "@components/Accordion";
// import ContactForm from "@components/ContactForm";

import InsuranceForm from "@components/Forms/insurance";
---

<style>
  #video {
    background-image: url(/images/health-insurance.avif);
    background-attachment: unset;
    background-size: cover;
    background-position: center;
    height: 300px;
    /* display: none; */
  }
</style>

<Page
  layout="hm fixed"
  title="Student Health Insurance Form | University of North America"
>
  <Header />
  <main el="main">
    <section id="video">
      <!-- <div class="maintitle"><div>International Student</div></div> -->
    </section>
    <section>
      <ul class="section" style="--bg-color:#4067b1;--color:#fff;">
        <div>
          <h1 class="heading">STUDENT HEALTH INSURANCE *WAIVER* FORM</h1>
          <div class="paddingReg">
            <!-- <Forms /> -->
            <p>
              The University of North America is offering an Essential Coverage
              PPO plan to all students for only $180 per quarter (paid through
              Campus Cafe).
            </p>
            <p>
              We will waive the benefits to all who complete and return this
              form, with proof of insurance. If you do not submit a waiver, you
              will be automatically enrolled in the University of North America
              Student Health Insurance plan.
            </p>
          </div>
          <div class="flex">
            <a
              href="/files/uploads/documents/student health insurance/Student Benefit Booklet University of North America 2024.pdf"
              class="button"
              style="--bg-color:#fbd504;--color:#000;--box-shadow:0 0 0 2px var(--bg-color);"
              >Student Benefit Guide</a
            >
          </div>
        </div>
      </ul>
    </section>
    <section>
      <ul class="section" style="--bg-color:#222;--color:#fff;">
        <InsuranceForm />
      </ul>
    </section>
    <Footer />
  </main>
</Page>
