      0 6px 30px 5px rgba(0, 0, 0, 0.02),
      0 8px 10px -5px rgba(0, 0, 0, 0.1);
  }

  .mus a {
    display: block;
    height: 100%;
    text-align: center;
    line-height: 30px;
    background: #4067b1;
    color: #fff;
    font-size: 16px;
    padding: 10px 15px;
    text-decoration: none;
  }
  .maintitle {
    background-image: linear-gradient(
      hsla(0, 0%, 0%, 0.5),
      transparent
    ) !important;
  }
</style>

