<script is:inline>
  function initMap() {
    var map = new google.maps.Map(document.getElementById("map"), {
      zoom: 15,
      center: {
        lat: 38.859409,
        lng: -77.385674,
      },
    });
    marker = new google.maps.Marker({
      map: map,
      draggable: false,
      animation: google.maps.Animation.DROP,
      position: {
        lat: 38.859409,
        lng: -77.385674,
      },
    });

    var transitLayer = new google.maps.TransitLayer();
    transitLayer.setMap(map);
  }
</script>
