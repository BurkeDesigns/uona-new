<style>
  #video {
    background-image: url(/images/international.jpg);
    background-size: cover;
    background-position: center;
    height: 500px;
  }

  .menu {
    list-style-type: none;
    padding: 0;
    margin: 0;
    background: #ccc;
    position: absolute;
    width: 190px;
    display: none;
    box-shadow: 0 3px 10px rgba(0, 0, 0, 0.5);
  }

  .show {
    display: block;
  }

  .menu li {
    padding: 15px 20px;
    color: #555;
    transition: 0.28s;
    cursor: pointer;
  }

  .menu li:hover {
    background: rgba(0, 0, 0, 0.5);
    color: #fff;
  }

  .drop {
    font-size: 12px;
    display: flex;
    padding: 0 6px;
    align-items: center;
    justify-content: center;
    width: 100%;
    height: 50px;
    background: #555;
    color: #fff;
    cursor: pointer;
  }

  .dropMenu {
    width: 100%;
    display: inline-block;
  }

  .calc {
    display: flex;
    align-items: center;
    flex-direction: row;
    font-size: 12px;
    flex-wrap: nowrap;
    width: 100%;
    max-width: 330px;
    margin: auto;
    background: #fff;
  }

  .colTitle {
    display: flex;
    align-items: center;
    justify-content: center;
    text-align: center;
    height: 50px;
    padding: 0 6px;
  }

  .colOne {
    width: 100%;
    min-width: 140px;
  }

  .colTwo {
    background: #666;
    color: #fff;
    max-width: 80px;
    width: 100%;
  }

  .colThree {
    background: #4168af;
    color: #fff;
    max-width: 80px;
    width: 100%;
  }

  .odd {
    background: rgba(0, 0, 0, 0.3);
  }

  .rowTitle,
  .rowD {
    height: 30px;
    display: flex;
    align-items: center;
    justify-content: center;
    padding: 5px;
  }

  .rowTitle {
    justify-content: left;
    padding: 5px 0px 5px 15px;
  }

  .drop:before {
    content: "\2630";
    margin-top: -3px;
    margin-right: 10px;
  }

  .rowD input {
    width: 100%;
    height: 100%;
    border: 0;
    box-sizing: border-box;
    margin: 0;
    padding: 0;
    text-align: center;
    outline: 0;
    background: rgba(0, 0, 0, 0.5);
    color: #fff;
  }

  .warning {
    color: #fff;
    padding: 0 20px;
    background: #bd0707;
    width: 100%;
    max-width: 330px;
    margin: auto;
    display: flex;
    box-sizing: border-box;
    font-size: 14px;
    height: 30px;
    justify-content: center;
    align-items: center;
  }

  .tools > * {
    position: relative;
    overflow: hidden;
    border-radius: 0px;
  }

  .tools .bg {
    background-image: url(/images/book.jpeg);
    height: 168px;
    object-fit: cover;
  }

  .tools h3 {
    position: absolute;
    bottom: 0;
    box-shadow: 0 -64px 28px -20px rgba(0, 0, 0, 0.8) inset;
    color: #fff;
    text-shadow: 0 3px 10px rgba(0, 0, 0, 1);
  }
  h3 {
    font-size: 23px !important;
    line-height: 1em;
  }
</style>

