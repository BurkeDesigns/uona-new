<script is:inline>
  function classToggle(e) {
    document.querySelector(e).classList.toggle("show");
  }

  function classAdd(e) {
    document.querySelector(e).classList.add("show");
  }

  function classRemove(e) {
    document.querySelector(e).classList.remove("show");
  }

  function numberWithCommas(x) {
    return x.toString().replace(/\B(?=(\d{3})+(?!\d))/g, ",");
  }
  var creditHour = 350;
  var colOne = document
      .getElementsByClassName("colOne")[0]
      .getElementsByClassName("rowTitle"),
    colTwo = document
      .getElementsByClassName("colTwo")[0]
      .getElementsByClassName("rowD"),
    colThree = document
      .getElementsByClassName("colThree")[0]
      .getElementsByClassName("rowD"),
    drop = document.getElementsByClassName("drop")[0],
    custom = document.getElementById("custom"),
    cOutput = document.getElementById("cOutput");

  function setCalc() {
    var bachelors = [1, 13.5, 180];
    var masters = [1, 9, 54];
    var cost = [350, 390];
    for (i = 0; i < colOne.length - 1; i++) {
      if (drop.innerHTML == "BACHELORS") {
        colTwo[i].innerHTML = bachelors[i];
        creditHour = cost[0];
      }
      if (drop.innerHTML == "MASTERS") {
        colTwo[i].innerHTML = masters[i];
        creditHour = cost[1];
      }
      var out = colTwo[i].innerHTML * creditHour;
      colThree[i].innerHTML = "$ " + numberWithCommas(out);
    }
  }
  setCalc();

  function menu() {
    classToggle(".menu");
  }

  function hover() {
    classAdd(".menu");
  }

  function end() {
    classRemove(".menu");
  }
  document.querySelector(".drop").addEventListener("click", menu);
  document.querySelector(".drop").addEventListener("mouseenter", hover);
  document.querySelector(".menu").addEventListener("mouseleave", end);
  var menuOptions = document
    .getElementsByClassName("menu")[0]
    .getElementsByTagName("li");
  for (i = 0; i < menuOptions.length; i++) {
    menuOptions[i].onclick = function () {
      document.getElementsByClassName("drop")[0].innerHTML = this.innerHTML;
      classToggle(".menu");
      setCalc();
      uOutput();
    };
  }

  // Close the dropdown if the user clicks outside of it
  window.onclick = function (e) {
    if (!e.target.matches(".drop")) {
      var myDropdown = document.getElementsByClassName("menu")[0];
      if (myDropdown.classList.contains("show")) {
        myDropdown.classList.remove("show");
      }
    }
  };

  function uOutput() {
    cOutput.innerHTML =
      "$" +
      numberWithCommas(
        custom.value *
          parseInt(colThree[0].innerHTML.replace(",", "").replace("$", ""))
      );
  }

  custom.onkeyup = function () {
    uOutput();
  };
</script>
