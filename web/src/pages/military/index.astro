<style>
  .full {
    box-sizing: border-box;
    width: 100%;
    padding: 0;
    overflow: hidden;
  }

  .full > div:not(.infoImg) {
    padding: 30px;
    padding-top: 0;
  }

  .infoImg {
    min-width: 200px;
    margin: 0;
  }

  .infoTitle {
    color: #4067b1;
    margin-top: 0;
  }

  .hideImg .infoImg {
    display: none;
  }

  #video {
    background-image: url("https://images.pexels.com/photos/40546/soldiers-military-attention-salute-40546.jpeg?auto=compress&cs=tinysrgb&dpr=2&h=750&w=1260");
    background-size: cover;
    background-position: center;
    height: 500px;
    background-attachment: unset;
  }

  .checklist {
    display: grid;
    grid-template-columns: 1fr 1fr 1fr;
    grid-gap: 30px;
    margin: 20px;
    font-size: 20px;
  }

  .checklist > * {
    display: grid;
    grid-auto-flow: column;
    justify-content: center;
    grid-gap: 8px;
    align-items: center;
  }

  .imgList {
    display: grid;
    grid-template-columns: 1fr 1fr;
    width: 100%;
    grid-gap: 32px;
    padding: 0;
    margin: 0;
    padding-top: 32px;
    background: transparent;
  }
  .imgList > * {
    width: 100%;
    height: 300px;
    object-fit: cover;
    object-position: center;
  }

  .mus {
    list-style-type: none;
    padding: 0;
    margin: 0;
    width: 100%;
    text-align: center;
    display: grid;
    grid-template-columns: 1fr 1fr;
    grid-gap: 8px;
  }

  .mus li {
    width: 100%;
    box-shadow:
      0 16px 24px 2px rgba(0, 0, 0, 0.04),
      0 6px 30px 5px rgba(0, 0, 0, 0.02),
      0 8px 10px -5px rgba(0, 0, 0, 0.1);
  }

  .mus a {
    display: block;
    height: 100%;
    text-align: center;
    line-height: 30px;
    background: #4067b1;
    color: #fff;
    font-size: 16px;
    padding: 10px 15px;
    text-decoration: none;
    box-sizing: border-box;
  }
  .paddingReg {
    line-height: 1.5em;
  }

  @media (max-width: 800px) {
    .mus {
      grid-template-columns: 1fr;
    }
  }
  @media (max-width: 520px) {
    .imgList {
      grid-template-columns: 1fr;
    }
    .full > div:not(.infoImg) {
      padding: 30px 0;
    }

    #video {
      height: 300px;
    }

    .checklist {
      grid-template-columns: 1fr;
    }

    .checklist > * {
      justify-content: left;
    }
  }

  .timeline {
    padding-left: 8px;
    line-height: 1.5em;
  }
  .timeline h4 {
    font-size: 18px;
  }
  .timeline > * {
    padding-left: 40px;
    position: relative;
  }
  .timeline > *:not(:last-child):after {
    content: "";
    width: 1px;
    background-color: rgba(0, 0, 0, 0.15);
    left: 0;
    bottom: 0;
    height: calc(100% - 60px);
    border-radius: 10px;
    position: absolute;
  }
  .timeline > *:before {
    content: "";
    width: 7px;
    height: 7px;
    border-radius: 100%;
    border: 2px solid #4067b1;
    background-color: #4067b1;
    left: 0;
    top: 8px;
    position: absolute;
    -webkit-transform: translateX(-50%);
    transform: translateX(-50%);
    box-shadow: 0 0 0 17.5px rgba(55, 85, 190, 0.05);
    z-index: 1;
  }
</style>
