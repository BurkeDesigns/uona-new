<style>
  #video {
    /*            background-image: url(/images/esports@1080.jpg);*/
    background-image: url(/files/uploads/esports/slideshow/slide1.jpg);
    background-attachment: unset;
    background-size: cover;
    background-position: center;
    height: 700px;
  }

  @media (max-width: 800px) {
