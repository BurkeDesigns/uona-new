  .mus a {
    display: block;
    height: 100%;
    text-align: center;
    line-height: 30px;
    background: #4067b1;
    color: #fff;
    font-size: 16px;
    padding: 10px 15px;
    text-decoration: none;
  }
</style>
<style>
  .slideshow {
    height: 100%;
    position: relative;
    width: 100%;
    background-color: #000;
    overflow: hidden;
    perspective: 1200px;
  }

  .slideshow > *,
  #slide4 {
    height: 100%;
    width: 100%;
    position: absolute;
    background-color: #000;
    background-image: url(https://images.pexels.com/photos/1044989/pexels-photo-1044989.jpeg?auto=compress&cs=tinysrgb&w=1260&h=750&dpr=1);
    background-size: cover;
    background-repeat: no-repeat;
    background-position: center;
  }

  .slideshow .bgslide {
    object-fit: cover;
    object-position: center;
    height: 100%;
    width: 100%;
    position: absolute;
    background-color: #000;
  }

  .slideshow img {
    object-fit: contain;
    object-position: center;
    position: absolute;
    height: 100%;
    width: 100%;
  }

  .social-media {
    display: flex;
    justify-content: center;
    flex-wrap: wrap;
    grid-gap: 20px;
    background: #fff !important;
  }
  .social-media img {
    width: 50px;
    height: 50px;
    object-fit: contain;
    object-position: center;
  }
</style>

