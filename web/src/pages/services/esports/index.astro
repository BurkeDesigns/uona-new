<script>
  import gsap from "gsap";
  import ScrollToPlugin from "gsap/ScrollToPlugin";
  import ScrollTrigger from "gsap/ScrollTrigger";
  gsap.registerPlugin(ScrollToPlugin, ScrollTrigger);

  var slideDuration = 1;
  var tl = gsap.timeline({
    repeat: -1,
    repeatDelay: 1,
    //            yoyo: true
  });

  tl.fromTo(
    ".slide",
    {
      autoAlpha: 0,
      scale: 1.3,
      y: 500,
      rotationY: 180,
      rotationX: 90,
    },
    {
      duration: slideDuration,
      stagger: 3,
      autoAlpha: 1,
      delay: 2,
      scale: 1,
      y: 0,
      ease: "power2.out",
      rotationY: 0,
      rotationX: 0,
    }
  )
    .set(".slideshow .slide:not(:last-child)", {
      autoAlpha: 0,
    })
    .to(".slideshow .slide:last-child", {
      delay: 1.5,
      autoAlpha: 0,
      duration: slideDuration,
    });

