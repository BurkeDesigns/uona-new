<style>
  #video {
    background-image: url(/images/test_center.jpg);
    background-size: cover;
    background-position: center;
    height: 400px;
    background-attachment: unset;
  }

  .card {
    display: inline-grid;
    grid-template-columns: 150px 1fr;
    grid-gap: 20px;
    align-content: flex-start;
    grid-auto-flow: column;
  }

  .card img {
    height: 150px;
    width: 150px;
    object-fit: cover;
    object-position: center;
    border-radius: 300px;
  }

  .list {
    display: grid;
    grid-gap: 20px;
  }

  .sm-list {
    display: grid;
    grid-gap: 10px;
  }

  .flat-btn {
    display: grid;
    grid-gap: 5px;
    align-items: center;
    justify-content: flex-start;
    grid-auto-flow: column;
  }

  .fullImg {
    width: 100%;
    box-shadow: 0 3px 15px rgba(0, 0, 0, 0.2);
  }

  .gallery {
    display: grid;
    grid-template-columns: repeat(3, 1fr);
    grid-gap: 10px;
    grid-auto-flow: dense;
    width: 100%;
    max-width: 900px;
    margin: auto;
  }

  .gallery > * {
    width: 100%;
    object-fit: cover;

    min-height: 250px;
    background-color: black;
  }

  #map {
    height: 300px;
    width: 100%;
  }

  .logo-list {
    display: grid;
    justify-content: center;
    align-items: center;
    grid-auto-flow: column;
    grid-gap: 20px;
  }

  .logo-list > * {
    height: 40px;
    margin: 10px;
  }

  @media (max-width: 800px) {
    .gallery {
      grid-template-columns: repeat(2, 1fr);
    }
  }

  @media (max-width: 600px) {
    .gallery {
      grid-template-columns: 1fr;
    }

    .card {
      grid-template-columns: 1fr;
      grid-auto-flow: row;
    }

    .logo-list {
      grid-auto-flow: row;
    }
  }
</style>

