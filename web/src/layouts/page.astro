---
const { title, schema, description, layout } = Astro.props;
// import Footer from "@components/Footer";
import { ViewTransitions } from "astro:transitions";
import "../theme/kmc/styles.css";
import "./styles.css"; // Global Styles are here
import Layout from "@components/Layout";
---

<html lang="en">
	<head>
		<link rel="preconnect" href="https://www.googletagmanager.com" />
		<link rel="preconnect" href="sanity.io" />
		<link rel="preconnect" href="https://cdn.sanity.io" />
		{schema && <script type="application/ld+json" set:html={schema} />}
		<meta charset="utf-8" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="description" content={description} />
		<title>{title}</title>
		<link rel="stylesheet" href="https://use.typekit.net/ljg3jjb.css" />
		<style is:global>
			html,
			body {
				font-family: system-ui;
				margin: 0;
				padding: 0;
				color: #2f2f2f;
			}
			body {
				background-color: #0e0f10;
			}
			body * {
				box-sizing: border-box;
			}
			main {
				width: 100%;
				min-height: 100svh;
				overflow: visible;
			}
			/* main > *:not(.fullWidth) {
				max-width: 1200px;
				width: 100%;
				margin: auto;
			} */
		</style>
		<ViewTransitions />
	</head>
	<body>
		<Layout el={layout}><slot /></Layout>
		<script>
			import gsap from "gsap";
			import ScrollToPlugin from "gsap/ScrollToPlugin";
			import ScrollTrigger from "gsap/ScrollTrigger";
			gsap.registerPlugin(ScrollToPlugin, ScrollTrigger);
		</script>
	</body>
</html>
