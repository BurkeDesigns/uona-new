---
const { title, schema, description, layout } = Astro.props;
// import Footer from "@components/Footer";
import { ViewTransitions } from "astro:transitions";
// import "../theme/autodesk/styles.css";
import "../theme/uona/styles.css";
import "./styles.css"; // Global Styles are here
import Layout from "@components/Layout";
---

<html lang="en">
	<head>
		{schema && <script type="application/ld+json" set:html={schema} />}
		<meta charset="utf-8" />
		<meta name="viewport" content="width=device-width" />
		<!-- <link rel="icon" type="image/svg+xml" href="/favicon.svg" /> -->
		
		<meta name="description" content={description} />
		<meta
      name="Keywords"
      content="university of north america, uona, education, affordable, CPT, Applied Learning, MBA, MSIT, MSCS, Fairfax, near Washingto DC, american education, university in north america, uona cpt, master degree, degree, accredited, accreditation, work in the us, i20"
    />

    <link
      rel="apple-touch-icon"
      sizes="180x180"
      href="/favicon/apple-touch-icon.png"
    />
    <link
      rel="icon"
      type="image/png"
      sizes="32x32"
      href="/favicon/favicon-32x32.png"
    />
    <link
      rel="icon"
      type="image/png"
      sizes="16x16"
      href="/favicon/favicon-16x16.png"
    />
    <link
      rel="mask-icon"
      href="/favicon/safari-pinned-tab.svg"
      color="#5bbad5"
    />
    <meta name="msapplication-TileColor" content="#2b5797" />
    <meta name="theme-color" content="#ffffff" />
    <title>{title || "University of North America"}</title>
		<!-- <link rel="stylesheet" href="https://use.typekit.net/ljg3jjb.css" /> -->
		<link rel="preload" href="https://use.typekit.net/ljg3jjb.css" as="style" onload="this.onload=null;this.rel='stylesheet'">
		<noscript><link rel="stylesheet" href="https://use.typekit.net/ljg3jjb.css"></noscript>

		<!-- preconnects -->
		<!-- <link rel="preconnect" href="https://static-dc.autodesk.net" crossorigin> -->

		<style is:global>
			html,
			body {
				font-family: system-ui;
				margin: 0;
				padding: 0;
				color: #2f2f2f;
			}
			body {
				background-color: #0e0f10;
			}
			body * {
				box-sizing: border-box;
			}
			main {
				width: 100%;
				min-height: 100svh;
				overflow: visible;
			}
			/* main > *:not(.fullWidth) {
				max-width: 1200px;
				width: 100%;
				margin: auto;
			} */
		</style>
		<ViewTransitions />
	</head>
	<body>
		<Layout el={layout}><slot /></Layout>
		<script>
			const { signIn, signOut } = await import("auth-astro/client");
			window.signIn = signIn;
			window.signOut = signOut;
			import gsap from "gsap";
			import ScrollToPlugin from "gsap/ScrollToPlugin";
			import ScrollTrigger from "gsap/ScrollTrigger";
			gsap.registerPlugin(ScrollToPlugin, ScrollTrigger);
		</script>
	</body>
</html>
